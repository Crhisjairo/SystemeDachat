<Window x:Class="SystemeDachat.Views.WindowsDialog.PaymentMethodWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemeDachat.Views.WindowsDialog"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        BorderBrush="Black"
        BorderThickness="2"
        Title="PaymentMethodWindows" Height="300" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"></RowDefinition>
            <RowDefinition Height="215*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Veuillez choisir votre mode de paiment" FontSize="45" TextAlignment="Center"></TextBlock>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Cash" FontSize="50" Click="Cash_Click"></Button>

            <Button Grid.Column="1" Content="Credit/Débit" FontSize="50" Click="CreditDebit_Click"/>
        </Grid>
        
    </Grid>
</Window>
