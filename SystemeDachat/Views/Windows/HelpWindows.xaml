<Window x:Class="SystemeDachat.Views.Windows.HelpWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemeDachat.Views.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        BorderThickness="2"
        BorderBrush="Black"
        Title="HelpWindows" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"></RowDefinition>
            <RowDefinition Height="211*"></RowDefinition>
            <RowDefinition Height="55*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Aide" FontSize="45"></TextBlock>

        <TextBlock Grid.Row="1" FontSize="25">
            ➡ Faitez ça. <LineBreak/>
            ➡ Faitez ça. <LineBreak/>
            ➡ Faitez ça. <LineBreak/>
            ➡ Faitez ça. <LineBreak/>
            ➡ Faitez ça. <LineBreak/>
            ➡ Faitez ça. <LineBreak/>
        </TextBlock>

        <Button Grid.Row="2" Content="OK" Style="{StaticResource ConfirmButton}" Width="200" Padding="0" Click="Ok_Button_Click"></Button>
    </Grid>
</Window>
